{
  "$schema": "http://json-schema.org/draft-07/schema",
  "title": "pkg-info",
  "description": "A package information descriptor.",
  "properties": {
    "$schema": {
      "type": "string"
    },
    "arch_asset_patterns": {
      "description": "Github asset patterns",
      "type": "object",
      "propertyNames": {
        "$ref": "#/definitions/arch"
      },
      "additionalProperties": {
        "$ref": "#/definitions/regex"
      }
    },
    "command": {
      "type": "string"
    },
    "document-url": {
      "$ref": "#/definitions/url"
    },
    "latest_version": {
      "type": "string"
    },
    "mode": {
      "type": "string",
      "enum": [
        "github-release",
        "bash-command",
        "jq-script"
      ]
    },
    "name": {
      "type": "string"
    },
    "repository_path": {
      "description": "Github mode repository path",
      "type": "string",
      "pattern": "^[\\w-]+/[\\w-]+$",
      "examples": [
        "gohugoio/hugo"
      ]
    },
    "script-path": {
      "$ref": "#/definitions/path"
    },
    "versions": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "propertyNames": {
          "$ref": "#/definitions/arch"
        },
        "additionalProperties": {
          "type": "object",
          "properties": {
            "digest": {
              "$ref": "#/definitions/digest"
            },
            "download_url": {
              "$ref": "#/definitions/url"
            },
            "filename": {
              "$ref": "#/definitions/path"
            }
          },
          "required": [
            "filename",
            "download_url",
            "digest"
          ],
          "additionalProperties": false
        }
      }
    }
  },
  "if": {
    "properties": {
      "mode": {
        "const": "github-release"
      }
    }
  },
  "then": {
    "required": [
      "repository_path",
      "arch_asset_patterns"
    ]
  },
  "else": {
    "if": {
      "properties": {
        "mode": {
          "const": "bash-command"
        }
      }
    },
    "then": {
      "required": [
        "command"
      ]
    }
  },
  "required": [
    "name",
    "mode"
  ],
  "definitions": {
    "arch": {
      "type": "string",
      "enum": [
        "arm64",
        "amd64"
      ]
    },
    "digest": {
      "type": "string",
      "oneOf": [
        {
          "pattern": "^sha256:[0-9a-f]{64}$"
        },
        {
          "pattern": "^sha512:[0-9a-f]{128}$"
        }
      ]
    },
    "path": {
      "type": "string",
      "format": "path"
    },
    "regex": {
      "type": "string",
      "format": "regex"
    },
    "url": {
      "type": "string",
      "format": "uri"
    }
  },
  "additionalProperties": false
}
